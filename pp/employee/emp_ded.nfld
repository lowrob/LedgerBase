Deductions()
{
	int 	retval, err;

	err = get_pay_param(&param,BROWSE,1,e_mesg);
	if(err < 0 && err != UNDEF){
		DispError((char *)&s_sth,e_mesg);
		return(err);
	}
	if(err == UNDEF){
#ifdef ENGLISH
		fomen("Payroll Parameters Are Not Setup..");
#else
		fomen("Parametres Payroll ne sont pas etablis..");
#endif
		get() ;
	}

	if(Initialize() < 0)
		exit(-1);

	if(emp_rec.em_numb[0] != '\0') {
		flg_reset(EMPLOYEE);

		err = get_n_employee(&emp_rec, BROWSE, 0, FORWARD, e_mesg);
#ifndef ORACLE
		seq_over(EMPLOYEE);
#endif
		if(ERROR == err)return(DBH_ERR) ;
		if(EFL == err) {

			fomen("No More Records....");
			get();
			return(NOERROR) ;
		}

		err = UsrBargVal(BROWSE,emp_rec.em_numb,emp_rec.em_barg,1,e_mesg);
		if(err < 0){
			DispError((char *)&s_sth,e_mesg);
		}
		else{
		  strcpy( s_sth.s_emp,emp_rec.em_numb);

		  retval = FreeList();
		  strcpy(empded.ed_numb, emp_rec.em_numb);
		  empded.ed_code[0] = '\0';
		  empded.ed_group[0] = '\0';
		  flg_reset(EMP_DED);

		  retval = BuildList();
#ifndef ORACLE
		  seq_over(EMP_DED);

#endif
		  if(ERROR == retval)return(DBH_ERR) ;

		  strcpy(s_sth.s_emp,emp_rec.em_numb);
		  strcpy(s_sth.s_name, emp_rec.em_last_name);
		  strcat(s_sth.s_name, ", ");
		  strcat(s_sth.s_name, emp_rec.em_first_name);
		  strcat(s_sth.s_name, " ");
		  strcat(s_sth.s_name, emp_rec.em_mid_name);

		  ret( WriteFields((char *)&s_sth,KEY_START, KEY_END) ) ;
	
		  err = ShowItems(CurPage);
		  if(err < 0) {
			return(err);
		  }
		}
	}

	retval = Empded(); 		/* maintenance processing */

	err = Close();			/* return to menu */
	if (err < 0) return(err);
	return(retval);
}

/*-------------------------------------------------------------------*/
/* Initialize PROFOM */

static
Initialize()
{

	if(InitScreens() < 0){
		fomcs();
		fomrt();		/* Initialize Screen */
		return(-1);
	}

	FirstPage = NULL;
	LastPage = NULL;

	return(NOERROR) ;
}	/* Initialize() */

/*--------------------------------------------------------------------------*/
/* Close nessary files and environment before exiting program               */

static
Close() 
{
	FreeList();
	/* Set terminal back to normal mode from PROFOM */
	fomcs();
	fomrt();

	close_dbh();	/* Close files */

	return(NOERROR);
}	/* CloseRtn() */
/*----------------------------------------------------------------------*/
static
FreeList()
{
	/* Free the linked list for the end */
	for( ;LastPage != FirstPage ; ) {
		LastPage = LastPage->PrevPage;
		free((char *)LastPage->NextPage);
		LastPage->NextPage = NULL;
	}
	if(FirstPage != NULL) {
		free((char *)FirstPage);
	}

	FirstPage = LastPage = NULL;

	return(NOERROR);
}

