		retval = get_ded_grp(&dedgrp,BROWSE,0,e_mesg);
		if(retval < 0){
			DispError((char *)&s_sth,e_mesg);
			s_sth.s_items[item_no].s_group[0] = LV_CHAR;
			return(-1);
		}
		strcpy(s_sth.s_items[item_no].s_gdesc, dedgrp.dg_desc);

		retval = CheckGrp(item_no);
		if(retval < 0){
			return(retval);
		}

		retval=WriteFields((char *)&s_sth,fld_no,fld_no+400);
		if(retval < 0) return(retval);

		break;

	default :
		fomer("No Help Window for This Field");
	}	/* Switch sr.curfld */

	return(NOERROR) ;
}	/* HdrAndKeyWindowHelp() */
