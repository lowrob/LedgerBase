/*------------------------------------------------------------*/
static
BuildList()
{
	int retval;
	int i;
	CurLast = CurPage = NULL;
	i = 0;

	for( ; ; ) {
		retval = get_n_emp_ded(&empded,BROWSE,0,FORWARD,e_mesg);
		if(retval < 0) {
			if(retval == EFL) break;
			DispError((char *)&s_sth,e_mesg);
			return(retval);
		}

		if(strcmp(empded.ed_numb,s_sth.s_emp)!=0) { 
			break;
		}

		if(PAGESIZE == i) i = 0;
		if(i == 0) {
			if((retval = MakeFreshPage()) < 0) return(retval);
		}

		strcpy(CurPage->Items[i].s_dedcd,empded.ed_code);

		strcpy(barg_unit.b_code,emp_rec.em_barg);
		barg_unit.b_date = get_date();
		flg_reset(BARG);
	
		retval = get_n_barg(&barg_unit,BROWSE,0,BACKWARD,e_mesg);
		if(retval == EFL ||
			strcmp(barg_unit.b_code, emp_rec.em_barg) != 0){
  		   DispError((char *)&s_sth,"Bargaining Unit does not Exist");
			return(NOERROR);
		}
		if(retval < 0){
  			DispError((char *)&s_sth,e_mesg);
  			return(ERROR);
		}
		seq_over(BARG);

		strcpy(deduct.dd_code,empded.ed_code);
		strcpy(deduct.dd_pp_code,barg_unit.b_pp_code);
		retval = get_deduction(&deduct,BROWSE,0,e_mesg);
		if(retval == UNDEF){
			strcpy(deduct.dd_desc,"Not On File");
		}
		if(retval < 0 && retval != UNDEF){
			DispError((char *)&s_sth,e_mesg);
			return(retval);
		}

		strcpy(dedgrp.dg_code,empded.ed_code);
		strcpy(dedgrp.dg_pp_code,barg_unit.b_pp_code);
		strcpy(dedgrp.dg_group,empded.ed_group);
		retval = get_ded_grp(&dedgrp,BROWSE,0,e_mesg);
		if(retval == UNDEF){
			strcpy(dedgrp.dg_desc,"Not On File");
		}
		if(retval < 0 && retval != UNDEF){
			DispError((char *)&s_sth,e_mesg);
			return(retval);
		}

		retval = CalcYTD();
		if(retval < 0) return(retval);

		strcpy(CurPage->Items[i].s_desc,deduct.dd_desc);
		strcpy(CurPage->Items[i].s_gdesc,dedgrp.dg_desc);
		strcpy(CurPage->Items[i].s_group,dedgrp.dg_group);
		strcpy(CurPage->Items[i].s_dedcd,empded.ed_code);
 
		if(dedgrp.dg_amt_flag[0] == FIXED){
			CurPage->Items[i].s_amount =
				empded.ed_amount;
		}
		else{
			CurPage->Items[i].s_amount = HV_DOUBLE;
		}

		CurPage->Items[i].s_dedytd = calc_dedytd;

		strcpy(CurPage->Items[i].s_status,ACTIVE);
		CurPage->I_Status[i][0] = ' ';
		CurPage->NoItems++;
		i++;
	}
	seq_over(EMP_EXTRA);


	if(CurLast != NULL) {
		CurPage = FirstPage;
	}

	if(retval == EFL) return(retval);
	return(NOERROR);
}
