/*                                                                       */
/*  Display help window for applicable fields                            */
static
CheckGrp(item_no)
int	item_no;
{
	int	retval, i;
	Page	*temppage;

	strcpy(empded.ed_numb,emp_rec.em_numb);
	strcpy(empded.ed_code,deduct.dd_code);
	strcpy(empded.ed_group, dedgrp.dg_group);

	retval = get_emp_ded(&empded,BROWSE,0,e_mesg);
	if(retval < 0 && retval != UNDEF){
		DispError((char *)&s_sth,e_mesg);
		return(retval);
	}

	if(retval >= 0){
#ifdef ENGLSH
		fomen("Record Already Exists - Please Re-enter");
#else
		fomen("Record Already Exists - Please Re-enter");
#endif
		s_sth.s_items[item_no].s_dedcd[0] = LV_CHAR;
		s_sth.s_items[item_no].s_group[0] = LV_CHAR;
		return(-1);
	}
	/* check to see if item is already in list */
	if(CurLast != NULL) {
	   for(temppage=FirstPage; temppage!=NULL; temppage=temppage->NextPage){
	      for(i=0; i < PAGESIZE; i++) {
		if(temppage->Items[i].s_dedcd[0] == NULL) {
			break;
		}
		if((strcmp(temppage->Items[i].s_dedcd,
			s_sth.s_items[item_no].s_dedcd) == 0)&&
		   (strcmp(temppage->Items[i].s_group,
			s_sth.s_items[item_no].s_group) == 0)){
#ifdef ENGLSH
		  fomen("Record Already Exists - Please Re-enter");
#else
		  fomen("Record Already Exists - Please Re-enter");
#endif
		  s_sth.s_items[item_no].s_dedcd[0] = LV_CHAR;
		  s_sth.s_items[item_no].s_group[0] = LV_CHAR;
		  return(-1);
		}
	      }
	      if(temppage == CurLast) break;
	   }
	}

	retval = CalcYTD();
	if(retval < 0) return(retval);

	s_sth.s_items[item_no].s_dedytd = calc_dedytd;

	if(dedgrp.dg_amt_flag[0] == FIXED){
	  if(dedgrp.dg_amount != 0)
		s_sth.s_items[item_no].s_amount = dedgrp.dg_amount;
	  else
		s_sth.s_items[item_no].s_amount = LV_DOUBLE;
	}
	else{
		s_sth.s_items[item_no].s_amount = HV_DOUBLE;
	}

	retval =WriteFields((char *)&s_sth,sr.curfld,sr.curfld+400);
	if(retval < 0) return(retval);

	return(NOERROR);
}

